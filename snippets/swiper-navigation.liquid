<div
  class="swiper-actions flex block-md content-center gap-10 mb-md-0 {{ class }} {{ class_prodcut_mobile }}"
>
  {% comment %}  border {% endcomment %}
  <div
    class="swiper-arrow {{ class }} transition swiper-button-prev inline-flex content-center {% if settings.rounded_corner > 1 %} rounded-50 overflow-hidden{% endif %}"
  >
    <svg style="width: 6px; height: 12px;" fill="none">
      <use href="#icon-back" />
    </svg>
  </div>
  {% comment %}  border {% endcomment %}
  <div
    class="swiper-arrow {{ class }} transition swiper-button-next inline-flex content-center {% if settings.rounded_corner > 1 %} rounded-50 overflow-hidden{% endif %}"
  >
    <svg style="width: 6px; height: 12px;" fill="none">
      <use href="#icon-next" />
    </svg>
  </div>
</div>
